<%- include('./layout/header.ejs') %>
<%- include('./layout/navbar.ejs') %>

<div class="container">
    <div class="row mt-5  justify-content-center">
        <div class="col-md-8 mt-sm-3 mb-3">
            <div class="card p-3 rounded">
                <div class="row">
                    <div class="col-md-12">
                        <form action="" method="post">
                            <h5>Personal Information</h5>
                            <div class="row">

                                <div class="col-md-6 pt-md-3">
                                    <div class="">
                                        <label for="idnumber" class="m-b-10 f-w-600">ID Number</label>
                                        <input type="text" name="idnumber" id="idnumber" class="form-control">
                                    </div>
                                </div>

                                <div class="col-md-12 pt-md-3">
                                    <div class="">
                                        <label for="firstname" class="m-b-10 f-w-600">Firstname</label>
                                        <input type="text" name="firstname" id="firstname" class="form-control">
                                    </div>
                                </div>


                                <div class="col-md-12 py-md-1">
                                    <label for="lastname" class="m-b-10 f-w-600">Lastname</label>
                                    <input type="text" name="lastname" id="lastname" class="form-control">
                                </div>


                                <div class="col-md-8 py-1">
                                    <label for="middlename" class="m-b-10 f-w-600">Middlename</label>
                                    <input type="text" name="middlename" id="middlename" class="form-control">
                                </div>

                                <div class="col-md-4 py-1">
                                    <label for="suffix" class="m-b-10 f-w-600">Suffix</label>
                                    <input type="text" name="suffix" id="suffix" class="form-control">
                                </div>

                            </div>

                            <div class="row mt-md-3">
                                <div class="col-sm-6 py-1">
                                    <label for="email">Email Address</label>
                                    <input type="email" id="email" name="email" class="form-control">
                                </div>
                                <div class="col-sm-6 py-1">
                                    <label for="number">Contact Number</label>
                                    <input type="text" id="number" name="number" class="form-control">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12 py-1">
                                    <label for="course">Course</label>
                                    <input type="text" id="course" name="course" class="form-control">
                                </div>
                            </div>

                            <div class="row mt-md-3">
                                <div class="col-sm-6 py-1">
                                    <label for="major">Major</label>
                                    <input type="text" id="major" name="major" class="form-control">
                                </div>
                                <div class="col-sm-6 py-1">
                                    <label for="year">Year Graduated</label>
                                    <input type="text" id="year" name="year" class="form-control">
                                </div>
                            </div>

                            <h5 class="mt-3">Social Account</h5>
                            <div class="row">
                                <div class="col-sm-12 py-1">
                                    <label for="facebook">Faceook</label>
                                    <input type="text" id="facebook" name="facebook" class="form-control">
                                </div>
                            </div>

                            <div class="row justify-content-center mt-2">
                                <button type="submit" class="btn btn-success col-sm-4">Update Account</button>
                                <button type="button" class="btn btn-danger col-sm-4 offset-sm-1" onClick="javascript:history.go(-1)">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>